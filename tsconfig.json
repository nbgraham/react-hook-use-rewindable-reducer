{
    "compilerOptions": {
      "allowSyntheticDefaultImports": true,
      "target": "es5",
      "lib": ["es2015", "dom"],
      "module": "commonjs",
      "declaration": true,
      "outDir": "./lib/",
      "strict": true,
      "suppressImplicitAnyIndexErrors": true,
      "baseUrl": ".",
      "skipLibCheck": true,
      "paths": {
        "lib/*": ["lib/*"],
      }
    },
    "include": ["src"],
    "exclude": ["node_modules", "**/*.test.*"]
  }